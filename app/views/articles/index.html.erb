<%= form_tag nil, method: :get do %>
  <%= text_field_tag :words, params[:words] %>
  <label><%= check_box_tag :highlight, '1', params[:highlight] %> ハイライト</label>
  <%= submit_tag '検索' %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.highlighted_attribute :title %></td>
        <td><%= article.highlighted_attribute :body %></td>
        <td><%= article.pgroonga_score %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
